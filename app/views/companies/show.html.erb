<h3>Companies List</h3>   
      
      <div>   
        <%= link_to 'Add New Company', '/companies/new' %>   
      </div>   
      <br>   
        <%= link_to 'Back', { controller: 'welcome', action: 'adminhome'} %>  
      <br>
     
     
     <table class="table table-bordered table-striped">   
       <tr>   
        <th>ID</th>   
        <th>Name</th> 
        <th>Delete Company</th>  
      </tr>   
       
      <% @company.each do |company| %>   
          <tr>   
            <td><%= company.id %></td>   
            <td><%= company.name %></td>
            <td><%= button_to "Delete", company, method: :delete %></td>
              
           </tr>   
      <% end %>   
    </table>